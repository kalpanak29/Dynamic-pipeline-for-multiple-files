							"isSequential": true,
							"activities": [
								{
									"name": "Exec_ProcessSubfolder",
									"type": "ExecutePipeline",
									"dependsOn": [],
									"policy": {
										"secureInput": false
									},
									"userProperties": [],
									"typeProperties": {
										"pipeline": {
											"referenceName": "PL_ProcessSubfolder",
											"type": "PipelineReference"
										},
										"waitOnCompletion": true,
										"parameters": {
											"SubfolderName": {
												"value": "@item()",
												"type": "Expression"
											},
