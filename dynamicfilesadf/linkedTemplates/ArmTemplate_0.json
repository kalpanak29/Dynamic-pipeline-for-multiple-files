		{
			"name": "[concat(parameters('factoryName'), '/PL_ProcessSingleFile')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "ValidateData",
						"type": "AzureFunctionActivity",
						"dependsOn": [],
						"policy": {
							"timeout": "0.12:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"functionName": "ValidateData",
							"body": {
								"value": "{\n    \"fileName\": \"@{pipeline().parameters.FileName}\",\n    \"folderPath\": \"@{pipeline().parameters.FolderPath}\",\n    \"action\": \"validate\"\n}",
								"type": "Expression"
							},
							"headers": {},
							"method": "POST"
						},
						"linkedServiceName": {
							"referenceName": "AzureFunction_LS",
							"type": "LinkedServiceReference"
						}
					},
					{
						"name": "IF_IsDataMessy",
						"type": "IfCondition",
						"dependsOn": [
							{
								"activity": "SET_MessyRowDetails",
								"dependencyConditions": [
									"Succeeded"
								]
							}
						],
						"userProperties": [],
						"typeProperties": {
							"expression": {
								"value": "@equals(variables('IsMessy'), true)",
								"type": "Expression"
							},
							"ifFalseActivities": [
								{
									"name": "COPY_CleanData",
									"type": "Copy",
									"dependsOn": [],
									"policy": {
										"timeout": "0.12:00:00",
										"retry": 0,
										"retryIntervalInSeconds": 30,
										"secureOutput": false,
										"secureInput": false
									},
									"userProperties": [],
									"typeProperties": {
										"source": {
											"type": "DelimitedTextSource",
											"storeSettings": {
												"type": "AzureBlobStorageReadSettings",
												"recursive": true,
												"enablePartitionDiscovery": false
											},
											"formatSettings": {
												"type": "DelimitedTextReadSettings"
											}
										},
										"sink": {
											"type": "DelimitedTextSink",
											"storeSettings": {
												"type": "AzureBlobStorageWriteSettings"
											},
											"formatSettings": {
												"type": "DelimitedTextWriteSettings",
												"quoteAllText": true,
												"fileExtension": ".txt"
											}
										},
										"enableStaging": false,
										"translator": {
											"type": "TabularTranslator",
											"typeConversion": true,
											"typeConversionSettings": {
												"allowDataTruncation": true,
												"treatBooleanAsNumber": false
											}
										}
									},
									"inputs": [
										{
											"referenceName": "Parameterized_New_Source_DS",
											"type": "DatasetReference",
											"parameters": {
												"ContainerName": {
													"value": "@pipeline().parameters.ContainerName",
													"type": "Expression"
												},
												"FolderPath": {
													"value": "@pipeline().parameters.FolderPath",
													"type": "Expression"
												},
												"FileName": {
													"value": "@pipeline().parameters.FileName",
													"type": "Expression"
												}
											}
										}
									],
									"outputs": [
										{
											"referenceName": "Parameterized_destination_dataset",
											"type": "DatasetReference",
											"parameters": {
												"ContainerName": "staging-data",
												"FolderPath": {
													"value": "@pipeline().parameters.FolderPath",
													"type": "Expression"
												},
												"FileName": {
													"value": "@pipeline().parameters.FileName",
													"type": "Expression"
												}
											}
										}
									]
								}
							],
							"ifTrueActivities": [
								{
									"name": "SendEmail",
									"type": "WebActivity",
									"dependsOn": [],
									"policy": {
										"timeout": "0.12:00:00",
										"retry": 0,
										"retryIntervalInSeconds": 30,
										"secureOutput": false,
										"secureInput": false
									},
									"userProperties": [],
									"typeProperties": {
										"method": "POST",
										"headers": {
											"\"Content-Type\"": "\"application/json\""
										},
										"url": "https://prod-35.eastus.logic.azure.com:443/workflows/95f3aa39b7424866be9010308cd47c33/triggers/When_an_HTTP_request_is_received/paths/invoke?api-version=2016-10-01&sp=%2Ftriggers%2FWhen_an_HTTP_request_is_received%2Frun&sv=1.0&sig=l4jT8f35yG0yDjEXy6kSeYEBK-_-2sv7LSf8KG8zXIY",
										"body": {
											"to": "@{pipeline().parameters.EmailRecipient}",
											"subject": "Messy Data Alert - @{pipeline().parameters.FileName}",
											"body": "Messy data found!\n\nFile: @{pipeline().parameters.FileName}\nFolder: @{pipeline().parameters.FolderPath}\n\nDetails: @{variables('MessyRowDetails')}"
										}
									}
								},
								{
									"name": "LS-Azure Function",
									"type": "AzureFunctionActivity",
									"dependsOn": [
										{
											"activity": "SendEmail",
											"dependencyConditions": [
												"Succeeded"
											]
										}
									],
									"policy": {
										"timeout": "0.12:00:00",
										"retry": 0,
										"retryIntervalInSeconds": 30,
										"secureOutput": false,
										"secureInput": false
									},
									"userProperties": [],
									"typeProperties": {
										"functionName": "CleanData",
										"body": {
											"fileName": "@{pipeline().parameters.FileName}",
											"folderPath": "@{pipeline().parameters.FolderPath}",
											"action": "clean"
										},
										"headers": {},
										"method": "POST"
									},
									"linkedServiceName": {
										"referenceName": "AzureFunction_LS",
										"type": "LinkedServiceReference"
									}
								}
							]
						}
					},
					{
						"name": "SET_IsMessy",
						"type": "SetVariable",
						"dependsOn": [
							{
								"activity": "ValidateData",
								"dependencyConditions": [
									"Succeeded"
								]
							}
						],
						"policy": {
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"variableName": "IsMessy",
							"value": {
								"value": "@activity('ValidateData').output.isMessy",
								"type": "Expression"
							}
						}
					},
					{
						"name": "SET_MessyRowDetails",
						"type": "SetVariable",
						"dependsOn": [
							{
								"activity": "SET_IsMessy",
								"dependencyConditions": [
									"Succeeded"
								]
							}
						],
						"policy": {
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"variableName": "MessyRowsDetails",
							"value": {
								"value": "@string(activity('ValidateData').output)",
								"type": "Expression"
							}
						}
					}
				],
				"policy": {
					"elapsedTimeMetric": {}
				},
				"parameters": {
					"FileName": {
						"type": "string"
					},
					"FolderPath": {
						"type": "string"
					},
					"EmailRecipient": {
						"type": "string"
					},
					"ContainerName": {
						"type": "string",
						"defaultValue": "raw-data"
					}
				},
				"variables": {
					"ValidationOutput": {
						"type": "String"
					},
					"MessyRowsDetails": {
						"type": "String"
					},
					"IsMessy": {
						"type": "Boolean",
						"defaultValue": false
					}
				},
				"annotations": [],
				"lastPublishTime": "2026-01-03T09:21:44Z"
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/AzureFunction_LS')]",
				"[concat(variables('factoryId'), '/datasets/Parameterized_New_Source_DS')]",
				"[concat(variables('factoryId'), '/datasets/Parameterized_destination_dataset')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/PL_ProcessSubfolder')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
