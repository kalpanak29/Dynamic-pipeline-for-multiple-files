							"subfolder1",
							"subfolder2"
						]
					},
					"EmailRecipient": {
						"type": "string",
						"defaultValue": "kskothawade@gmail.com"
					}
				},
				"variables": {
					"MessyDataDetails": {
						"type": "Array",
						"defaultValue": []
					},
					"CurrentFileName": {
						"type": "String"
					},
					"CurrentFolderName": {
						"type": "String"
					},
					"IsDataMessy": {
						"type": "Boolean",
						"defaultValue": false
					}
				},
				"annotations": [],
				"lastPublishTime": "2026-01-03T09:21:45Z"
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/pipelines/PL_ProcessSingleFile')]",
				"[concat(variables('factoryId'), '/pipelines/PL_ProcessSubfolder')]"
			]
		}
	]
