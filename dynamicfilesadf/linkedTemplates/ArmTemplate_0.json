												"value": "@pipeline().parameters.SubfolderName",
												"type": "Expression"
											},
											"EmailRecipient": {
												"value": "@pipeline().parameters.EmailRecipient",
												"type": "Expression"
											},
											"ContainerName": {
												"value": "@pipeline().parameters.ContainerName",
												"type": "Expression"
											}
										}
									}
								}
							]
						}
					}
				],
				"policy": {
					"elapsedTimeMetric": {}
				},
				"parameters": {
					"SubfolderName": {
						"type": "string"
					},
					"EmailRecipient": {
						"type": "string"
					},
					"ContainerName": {
						"type": "string"
					}
				},
				"annotations": [],
				"lastPublishTime": "2026-01-03T09:21:44Z"
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/DS_Folder_Metadata')]",
				"[concat(variables('factoryId'), '/pipelines/PL_ProcessSingleFile')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/ProcessMessyData_Master')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "FOREACH_StandaloneFiles",
						"type": "ForEach",
						"dependsOn": [],
						"userProperties": [],
						"typeProperties": {
							"items": {
								"value": "@pipeline().parameters.StandaloneFiles",
								"type": "Expression"
							},
							"batchCount": 2,
							"activities": [
								{
									"name": "EXEC_ProcessStandaloneFile",
									"type": "ExecutePipeline",
									"dependsOn": [],
									"policy": {
										"secureInput": false
									},
									"userProperties": [],
									"typeProperties": {
										"pipeline": {
											"referenceName": "PL_ProcessSingleFile",
											"type": "PipelineReference"
										},
										"waitOnCompletion": true,
										"parameters": {
											"FileName": {
												"value": "@item()",
												"type": "Expression"
											},
											"EmailRecipient": {
												"value": "@pipeline().parameters.EmailRecipient",
												"type": "Expression"
											},
											"ContainerName": {
												"value": "@pipeline().parameters.ContainerName",
												"type": "Expression"
											}
										}
									}
								}
							]
						}
					},
					{
						"name": "ForEachSubfolders",
						"type": "ForEach",
						"dependsOn": [
							{
								"activity": "FOREACH_StandaloneFiles",
								"dependencyConditions": [
									"Succeeded"
								]
							}
						],
						"userProperties": [],
						"typeProperties": {
							"items": {
								"value": "@pipeline().parameters.Subfolders",
								"type": "Expression"
